{
    "family": "sample-fargate", 
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "fargate-app", 
            "image": "543512271426.dkr.ecr.ap-south-1.amazonaws.com/nginx:latest",
            "ExecutionRoleArn": "arn:aws:iam::543512271426:role/ecs-task-execution-for-ecs-fargate",
            "portMappings": [
                {
                    "containerPort": 80, 
                    "hostPort": 80, 
                    "protocol": "tcp"
                }
            ]
        },
        {
            "name": "python",
            "image": "543512271426.dkr.ecr.ap-south-1.amazonaws.com/python:latest",
            "ExecutionRoleArn": "arn:aws:iam::543512271426:role/ecs-task-execution-for-ecs-fargate",
            "essential": true,
            "portMappings": [
              {
                "protocol": "tcp",
                "containerPort": 5000
              }
            ]
          },
          {
            "name": "nodejs",
            "image": "543512271426.dkr.ecr.ap-south-1.amazonaws.com/nodejs:latest",
            "ExecutionRoleArn": "arn:aws:iam::543512271426:role/ecs-task-execution-for-ecs-fargate",
            "essential": true,
            "portMappings": [
              {
                "protocol": "tcp",
                "containerPort": 8000
              }
            ]
          }
    ], 
    "requiresCompatibilities": [
        "FARGATE"
    ], 
    "cpu": "256", 
    "memory": "512"
}
